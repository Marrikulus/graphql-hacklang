{
    "name": "marrikulus/graphql-hacklang",
    "description": "A PHP port of GraphQL reference implementation",
    "type": "library",
    "license": "BSD",
    "homepage": "https://github.com/marrikulus/graphql-hacklang",
    "keywords": [
        "graphql",
        "API"
    ],
    "require": {
        "hhvm": "^4.32.0",
        "php": ">=5.5,<8.0-DEV",
        "ext-mbstring": "*",
        "hhvm/hhvm-autoload": "^v2.0",
        "hhvm/hsl": "^v4.40"
    },
    "require-dev": {
        "hhvm/hacktest": "^v2.0",
        "psr/http-message": "^1.0",
        "hack-psr/psr7-http-message-hhi": "^1.0"
    },
    "autoload": {
        "files": [
            "src/deprecated.php"
        ],
        "psr-4": {
            "GraphQL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GraphQL\\Tests\\": "tests/",
            "GraphQL\\Benchmarks\\": "benchmarks/",
            "GraphQL\\Examples\\Blog\\": "examples/01-blog/Blog/"
        }
    },
    "suggest": {
        "react/promise": "To leverage async resolving on React PHP platform",
        "psr/http-message": "To use standard GraphQL server"
    }
}
